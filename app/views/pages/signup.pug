extends ../layout.pug

block content
	.container
		.row
			.col-md-5
				form(method="POST" action="/user/signup")
					.modal-body
						.form-group
							label(for="signupName") 用戶名
							input#signupName.form-control(name="user[name]" type="text")
						.form-group
							label(for="signupPassword") 密碼
							input#signupName.form-control(name="user[password]" type="text")
					.modal-footer
						button.btn.btn-default(type="button" data-dismiss="modal") 關閉
						button.btn.btn-success(type="submit") 提交